@model Repository.Models.Place

@{
    ViewBag.Title = "Edycja miejsce - metaTitle - do 60 znaków";
    ViewBag.Opis = "Edycja miejsce";
    ViewBag.SlowaKluczowe = "Edycja miejsce, słowa kluczowe, keywords";
}

<h2>Edytujesz wpis nr: @Model.Id</h2>

@if (ViewBag.Blad == true)
{
    <div class="alert-danger" role="alert">
        Wystapił błąd podczas edycji
    </div>
}
else if (ViewBag.Blad == false)
{
    <div class="alert-success" role="alert">
        Wykonano poprawnie
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Place</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do listy", "Index", null, new { @class = "btn btn-warning" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
